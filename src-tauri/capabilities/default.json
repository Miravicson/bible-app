{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "display"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "sql:default",
    "sql:allow-execute",
    "fs:default",
    "fs:read-files",
    "fs:allow-write-text-file",
    "fs:allow-rename",
    "fs:allow-remove",
    "core:window:allow-close",
    "core:window:allow-destroy",
    {
      "identifier": "fs:scope",
      "allow": [
        "**/*"
      ]
    },
    "dialog:default"
  ]
}